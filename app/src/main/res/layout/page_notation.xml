<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notation_page"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:background="@drawable/button_back_left_active"
            android:gravity="end"
            android:padding="10dp"
            android:text="Geetobitan"
            android:textColor="#159EFF"
            android:textSize="14dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="@drawable/button_back_right_inactive"
            android:gravity="start"
            android:padding="10dp"
            android:text="Swarabitan"
            android:textColor="#757677"
            android:textSize="14dp"
            android:textStyle="normal" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_geetobitan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#F6F6F6"
        android:background="#FFFFFF"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginBottom="0dp" />

    <ListView
        android:id="@+id/list_swarabitan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#F6F6F6"
        android:background="#FFFFFF"
        android:dividerHeight="1dp"
        android:visibility="gone"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_marginBottom="0dp" />

</LinearLayout>